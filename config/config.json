{
  "general": {
    "app_name": "a11y-pdf-audit",
    "version": "1.3.0 (Beta)",
    "base_url": "https://a11y-pdf-audit.fly.dev",
    "author": "Dr. Harald Hutter",
    "copyright_year": "2026"
  },
  "pdf_metadata": {
    "_note": "Title leer lassen → Title wird automatisch aus HTML gesetzt.",
    "Title":       "",
    "Author":      "Dr. Harald Hutter",
    "Subject":     "Accessibility Audit Results (PDF/UA and WCAG Compliance)",
    "Keywords":    ["PDF/UA", "WCAG", "Accessibility", "Audit", "VeraPDF"],
    "_note": "Producer leer lassen → WeasyPrint-Version wird automatisch gesetzt.",
    "Producer":    "",
    "Lang":        ["en-US"]
  },
  "assets": {
    "logo_file": "static/AccessibilityMatters.webp",
    "logo_alt": "Hashtag 'Accessibility Matters' with colorful paint splashes behind the text"
  },
  "paths": {
    "output_dir_fly": "/app/output",
    "output_dir_local": "output",
    "verapdf_cli_fly": "/opt/verapdf/veraPDF-cli.jar",
    "verapdf_cli_local": "verapdf_local/bin/greenfield-apps-1.28.2.jar",
    "custom_profile_fly": "/app/config/profiles/screenReadable.xml",
    "custom_profile_local": "config/profiles/screenReadable.xml"
  },
  "crawler": {
    "user_agent": "Mozilla/5.0 (compatible; a11y-pdf-audit/1.2; +https://a11y-pdf-audit.fly.dev)",
    "timeout": 10,
    "default_max_pages": 10,
    "default_depth": 1
  },
  "audit": {
    "java_cmd": "java",
    "verapdf_params": ["-cp", "{jar_path}", "org.verapdf.apps.GreenfieldCliWrapper"],
    "timeout_version_sec": 30,
    "timeout_check_sec": 120,
    "timeout_factor": 4,
    "verapdf_retries": 1
  }
}
